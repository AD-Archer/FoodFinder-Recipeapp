<div class="section-content">
    <h2 class="mb-4">Popular Recipes</h2>
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <% if (locals.popularRecipes && popularRecipes.length > 0) { %>
            <% popularRecipes.forEach(recipe => { %>
                <div class="col">
                    <div class="card h-100" style="cursor: pointer;" onclick="goToRecipe('<%= recipe.id %>')">
                        <% if (recipe.imageUrl) { %>
                            <img src="<%= recipe.imageUrl %>" 
                                 class="card-img-top" 
                                 alt="<%= recipe.title %>"
                                 style="height: 200px; object-fit: cover;">
                        <% } %>
                        <div class="card-body">
                            <h5 class="card-title"><%= recipe.title %></h5>
                            <p class="card-text text-muted">
                                By <%= recipe.author ? recipe.author.username : 'Unknown' %>
                            </p>
                        </div>
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12">
                <p class="text-muted">No recipes found.</p>
            </div>
        <% } %>
    </div>
</div>