<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Finder - Dashboard</title>
    <%- include('../partials/bootstrap') %>
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container py-5">
        <%- include('../partials/alerts') %>
        
        <!-- Welcome Section -->
        <div class="text-center mb-5">
            <% if (user) { %>
                <h1>Welcome back, <%= user.username %>!</h1>
                <div class="mt-3">
                    <a href="/recipes/create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Recipe
                    </a>
                    <a href="/recipes/my-recipes" class="btn btn-outline-primary ms-2">
                        <i class="bi bi-collection"></i> My Recipes
                    </a>
                </div>
            <% } else { %>
                <h1>Welcome to Food Finder!</h1>
                <p class="lead">
                    Discover amazing recipes and connect with food lovers.
                    <a href="/signup" class="btn btn-primary ms-2">Join Now</a>
                </p>
            <% } %>
        </div>

        <!-- Popular Recipes Section -->
        <section class="mb-5">
            <h2 class="mb-4">Popular Recipes</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% popularRecipes.forEach(recipe => { %>
                    <%- include('../partials/recipeCard', { recipe }) %>
                <% }); %>
            </div>
        </section>

        <!-- Categories Section -->
        <section class="mb-5">
            <h2 class="mb-4">Browse Categories</h2>
            <div class="row row-cols-2 row-cols-md-4 g-4">
                <% categories.forEach(category => { %>
                    <div class="col">
                        <a href="/recipes/category/<%= category.id %>" class="text-decoration-none">
                            <div class="card h-100 text-center">
                                <div class="card-body">
                                    <h5 class="card-title"><%= category.name %></h5>
                                    <p class="text-muted"><%= category.recipeCount %> recipes</p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>
        </section>

        <!-- Suggested Users Section (Only shown to logged-in users) -->
        <% if (user && suggestedUsers && suggestedUsers.length > 0) { %>
            <section class="mb-5">
                <h2 class="mb-4">Suggested Users</h2>
                <div class="row row-cols-1 row-cols-md-4 g-4">
                    <% suggestedUsers.forEach(suggestedUser => { %>
                        <%- include('../partials/userCard', { user: suggestedUser }) %>
                    <% }); %>
                </div>
            </section>
        <% } %>

        <!-- Recent Recipes Section -->
        <section class="mb-5">
            <h2 class="mb-4">Recent Recipes</h2>
            <div class="row row-cols-1 row-cols-md-4 g-4">
                <% recentRecipes.forEach(recipe => { %>
                    <%- include('../partials/recipeCard', { recipe }) %>
                <% }); %>
            </div>
        </section>
    </div>

    <%- include('../partials/footer') %>

    <!-- Add this script at the bottom of the file -->
    <script>
    async function toggleFollow(username, button) {
        const isFollowing = button.getAttribute('data-following') === 'true';
        try {
            const response = await fetch(`/users/${username}/follow`, {
                method: isFollowing ? 'DELETE' : 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            const data = await response.json();
            
            if (data.success) {
                button.setAttribute('data-following', !isFollowing);
                button.textContent = isFollowing ? 'Follow' : 'Unfollow';
                button.className = `btn btn-${isFollowing ? '' : 'outline-'}primary btn-sm follow-btn`;
            } else {
                alert(data.error || 'Error updating follow status');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error updating follow status');
        }
    }
    </script>
</body>
</html> 