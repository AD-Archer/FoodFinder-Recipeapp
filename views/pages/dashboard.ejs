<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Finder - Dashboard</title>
    <%- include('../partials/meta') %>
    <%- include('../partials/bootstrap') %>
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container py-5">
        <%- include('../partials/alerts') %>
        
        <!-- Popular Recipes Section -->
        <section class="mb-5">
            <%- include('../partials/dashboard/popularrecipes') %>
        </section>

        <!-- Categories/Cuisine Section -->
        <section class="mb-5">
            <%- include('../partials/dashboard/cuisine') %>
        </section>

        <!-- Suggested Users Section (if logged in) -->
        <% if (locals.user) { %>
            <section class="mb-5">
                <%- include('../partials/dashboard/suggestedusers') %>
            </section>
        <% } %>

        <!-- Recent Recipes Section -->
        <section class="mb-5">
            <%- include('../partials/dashboard/recent') %>
        </section>
    </div>

    <%- include('../partials/footer') %>

    <script>
        function goToRecipe(id) {
            window.location.href = `/recipes/${id}`;
        }
    </script>
</body>
</html> 