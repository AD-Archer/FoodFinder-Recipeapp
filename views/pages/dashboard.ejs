<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Finder - Dashboard</title>
    <meta name="google-adsense-account" content="ca-pub-9831610369524751">
    <%- include('../partials/bootstrap') %>
</head>
<body>
    <%- include('../partials/header') %>

    <div class="page-content">
        <div class="welcome-section">
            <div class="container">
                <div class="text-center">
                    <% if (user) { %>
                        <h1 class="display-4 mb-4">Welcome back, <%= user.username %>!</h1>
                        <div class="mt-3">
                            <a href="/recipes/create" class="btn btn-light">
                                <i class="bi bi-plus-circle"></i> Create Recipe
                            </a>
                            <a href="/recipes/my-recipes" class="btn btn-outline-light ms-2">
                                <i class="bi bi-collection"></i> My Recipes
                            </a>
                        </div>
                    <% } else { %>
                        <h1 class="display-4 mb-4">Welcome to Food Finder!</h1>
                        <p class="lead">
                            Discover amazing recipes and connect with food lovers.
                            <a href="/signup" class="btn btn-light ms-2">Join Now</a>
                        </p>
                    <% } %>
                </div>
            </div>
        </div>

        <div class="container">
            <%- include('../partials/alerts') %>
            
            <!-- Popular Recipes Section -->
            <section class="mb-5">
                <h2 class="mb-4">Popular Recipes</h2>
                <div class="row row-cols-1 row-cols-md-3 g-4">
                    <% if (popularRecipes && popularRecipes.length > 0) { %>
                        <% popularRecipes.forEach(recipe => { %>
                            <div class="col">
                                <div class="card h-100" style="cursor: pointer;" onclick="goToRecipe(<%= recipe.id %>, event)">
                                    <% if (recipe.imageUrl) { %>
                                        <img src="<%= recipe.imageUrl %>" class="card-img-top" alt="<%= recipe.title %>" style="height: 200px; object-fit: cover;">
                                    <% } %>
                                    <div class="card-body">
                                        <h5 class="card-title"><%= recipe.title %></h5>
                                        <p class="card-text"><%= recipe.description %></p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <small class="text-muted">By 
                                                    <a href="/users/<%= recipe.author.username %>" onclick="event.stopPropagation()">
                                                        <%= recipe.author.username %>
                                                    </a>
                                                </small>
                                            </div>
                                            <div class="btn-group">
                                                <% if (user) { %>
                                                    <button 
                                                        class="btn btn-sm <%= recipe.isSaved ? 'btn-primary' : 'btn-outline-primary' %>"
                                                        onclick="toggleSave(<%= recipe.id %>, this, event)"
                                                        data-saved="<%= recipe.isSaved %>"
                                                    >
                                                        <i class="bi <%= recipe.isSaved ? 'bi-bookmark-fill' : 'bi-bookmark' %>"></i>
                                                        <%= recipe.isSaved ? 'Saved' : 'Save' %>
                                                    </button>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12 text-center">
                            <p class="text-muted">No recipes yet. Be the first to create one!</p>
                        </div>
                    <% } %>
                </div>
            </section>

            <!-- Browse Categories Section -->
            <section class="mb-5">
                <h2 class="section-title">Browse Categories</h2>
                <div class="row g-4">
                    <% Object.entries(groupedCategories).forEach(([type, categories]) => { %>
                        <% if (categories.length > 0) { %>
                            <div class="col-12 mb-5">
                                <h3 class="h5 mb-3 text-muted text-capitalize fw-bold"><%= type %></h3>
                                <div class="row row-cols-2 row-cols-md-3 row-cols-lg-6 g-3">
                                    <% categories.forEach(category => { %>
                                        <div class="col">
                                            <a href="/recipes/browse?category=<%= category.id %>" 
                                               class="text-decoration-none">
                                                <div class="card category-card">
                                                    <% if (category.imageUrl) { %>
                                                        <img src="<%= category.imageUrl %>" 
                                                             class="card-img-top" 
                                                             alt="<%= category.name %>">
                                                    <% } %>
                                                    <div class="card-body">
                                                        <h6 class="card-title text-center">
                                                            <%= category.name %>
                                                        </h6>
                                                        <p class="recipe-count text-center mb-0">
                                                            <%= category.dataValues.recipeCount || 0 %> recipes
                                                        </p>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        <% } %>
                    <% }); %>
                </div>
            </section>

            <!-- Suggested Users Section (Only shown to logged-in users) -->
            <% if (false) { %> <!-- Temporarily disabled -->
                <section class="mb-5">
                    <h2 class="mb-4">Suggested Users</h2>
                    <div class="row row-cols-1 row-cols-md-4 g-4">
                        <% suggestedUsers.forEach(suggestedUser => { %>
                            <%- include('../partials/userCard', { user: suggestedUser }) %>
                        <% }); %>
                    </div>
                </section>
            <% } %>

            <!-- Recent Recipes Section -->
            <section class="mb-5">
                <h2 class="mb-4">Recent Recipes</h2>
                <div class="row row-cols-1 row-cols-md-4 g-4">
                    <% if (latestRecipes && latestRecipes.length > 0) { %>
                        <% latestRecipes.forEach(recipe => { %>
                            <div class="col">
                                <div class="card h-100" style="cursor: pointer;" onclick="goToRecipe(<%= recipe.id %>, event)">
                                    <% if (recipe.imageUrl) { %>
                                        <img src="<%= recipe.imageUrl %>" class="card-img-top" alt="<%= recipe.title %>" style="height: 200px; object-fit: cover;">
                                    <% } %>
                                    <div class="card-body">
                                        <h5 class="card-title"><%= recipe.title %></h5>
                                        <p class="card-text"><%= recipe.description %></p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div>
                                                <small class="text-muted">By 
                                                    <a href="/users/<%= recipe.author.username %>" onclick="event.stopPropagation()">
                                                        <%= recipe.author.username %>
                                                    </a>
                                                </small>
                                            </div>
                                            <div class="btn-group">
                                                <% if (user) { %>
                                                    <button 
                                                        class="btn btn-sm <%= recipe.isSaved ? 'btn-primary' : 'btn-outline-primary' %>"
                                                        onclick="toggleSave(<%= recipe.id %>, this, event)"
                                                        data-saved="<%= recipe.isSaved %>"
                                                    >
                                                        <i class="bi <%= recipe.isSaved ? 'bi-bookmark-fill' : 'bi-bookmark' %>"></i>
                                                        <%= recipe.isSaved ? 'Saved' : 'Save' %>
                                                    </button>
                                                <% } %>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        <% }); %>
                    <% } else { %>
                        <div class="col-12 text-center">
                            <p class="text-muted">No recipes yet. Be the first to create one!</p>
                        </div>
                    <% } %>
                </div>
            </section>
        </div>
    </div>

    <%- include('../partials/footer') %>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-9831610369524751"
    crossorigin="anonymous"></script>
    
    <script>
    async function toggleFollow(username, button) {
        const isFollowing = button.getAttribute('data-following') === 'true';
        try {
            const response = await fetch(`/users/${username}/follow`, {
                method: isFollowing ? 'DELETE' : 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            const data = await response.json();
            
            if (data.success) {
                button.setAttribute('data-following', !isFollowing);
                button.textContent = isFollowing ? 'Follow' : 'Unfollow';
                button.className = `btn btn-${isFollowing ? '' : 'outline-'}primary btn-sm follow-btn`;
            } else {
                alert(data.error || 'Error updating follow status');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error updating follow status');
        }
    }

    function goToRecipe(recipeId, event) {
        // Don't navigate if they clicked the save button or author link
        if (event.target.closest('.btn-group') || event.target.closest('a')) {
            return;
        }
        window.location.href = `/recipes/${recipeId}`;
    }

    async function toggleSave(recipeId, button, event) {
        event.stopPropagation(); // Prevent card click when saving
        try {
            const isSaved = button.getAttribute('data-saved') === 'true';
            const response = await fetch(`/recipes/${recipeId}/save`, {
                method: isSaved ? 'DELETE' : 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            if (data.success) {
                button.setAttribute('data-saved', !isSaved);
                button.innerHTML = isSaved ? 
                    '<i class="bi bi-bookmark"></i> Save' : 
                    '<i class="bi bi-bookmark-fill"></i> Saved';
                button.classList.toggle('btn-outline-primary');
                button.classList.toggle('btn-primary');
            } else {
                alert(data.error || 'Error updating save status');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error updating save status');
        }
    }
    </script>
</body>
</html> 