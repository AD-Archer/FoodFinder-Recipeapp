<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Finder - Dashboard</title>
    <%- include('../partials/bootstrap') %>
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container py-5">
        <%- include('../partials/alerts') %>
        
        <!-- Welcome Section -->
        <div class="text-center mb-5">
            <% if (user) { %>
                <h1>Welcome back, <%= user.username %>!</h1>
                <div class="mt-3">
                    <a href="/recipes/create" class="btn btn-primary">
                        <i class="bi bi-plus-circle"></i> Create Recipe
                    </a>
                    <a href="/recipes/my-recipes" class="btn btn-outline-primary ms-2">
                        <i class="bi bi-collection"></i> My Recipes
                    </a>
                </div>
            <% } else { %>
                <h1>Welcome to Food Finder!</h1>
                <p class="lead">
                    Discover amazing recipes and connect with food lovers.
                    <a href="/signup" class="btn btn-primary ms-2">Join Now</a>
                </p>
            <% } %>
        </div>

        <!-- Popular Recipes Section -->
        <section class="mb-5">
            <h2 class="mb-4">Popular Recipes</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                <% if (popularRecipes && popularRecipes.length > 0) { %>
                    <% popularRecipes.forEach(recipe => { %>
                        <%- include('../partials/recipeCard', { recipe }) %>
                    <% }); %>
                <% } else { %>
                    <div class="col-12 text-center">
                        <p class="text-muted">No recipes yet. Be the first to create one!</p>
                    </div>
                <% } %>
            </div>
        </section>

        <!-- Browse Categories Section -->
        <section class="mb-5">
            <h2 class="mb-4">Browse Categories</h2>
            <div class="row g-4">
                <% Object.entries(groupedCategories).forEach(([type, categories]) => { %>
                    <% if (categories.length > 0) { %>
                        <div class="col-12 mb-5">
                            <h3 class="h5 mb-3 text-muted text-capitalize"><%= type %></h3>
                            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-6 g-3">
                                <% categories.forEach(category => { %>
                                    <div class="col">
                                        <a href="/recipes/browse?category=<%= category.id %>" 
                                           class="text-decoration-none">
                                            <div class="card h-100 shadow-sm hover-shadow">
                                                <% if (category.imageUrl) { %>
                                                    <img src="<%= category.imageUrl %>" 
                                                         class="card-img-top" 
                                                         alt="<%= category.name %>"
                                                         style="height: 120px; object-fit: cover;">
                                                <% } %>
                                                <div class="card-body">
                                                    <h6 class="card-title text-center mb-1">
                                                        <%= category.name %>
                                                    </h6>
                                                    <p class="text-muted text-center small mb-0">
                                                        <%= category.dataValues.recipeCount || 0 %> recipes
                                                    </p>
                                                </div>
                                            </div>
                                        </a>
                                    </div>
                                <% }); %>
                            </div>
                        </div>
                    <% } %>
                <% }); %>
            </div>
        </section>

        <!-- Suggested Users Section (Only shown to logged-in users) -->
        <% if (user && suggestedUsers && suggestedUsers.length > 0) { %>
            <section class="mb-5">
                <h2 class="mb-4">Suggested Users</h2>
                <div class="row row-cols-1 row-cols-md-4 g-4">
                    <% suggestedUsers.forEach(suggestedUser => { %>
                        <%- include('../partials/userCard', { user: suggestedUser }) %>
                    <% }); %>
                </div>
            </section>
        <% } %>

        <!-- Recent Recipes Section -->
        <section class="mb-5">
            <h2 class="mb-4">Recent Recipes</h2>
            <div class="row row-cols-1 row-cols-md-4 g-4">
                <% if (latestRecipes && latestRecipes.length > 0) { %>
                    <% latestRecipes.forEach(recipe => { %>
                        <%- include('../partials/recipeCard', { recipe }) %>
                    <% }); %>
                <% } else { %>
                    <div class="col-12 text-center">
                        <p class="text-muted">No recipes yet. Be the first to create one!</p>
                    </div>
                <% } %>
            </div>
        </section>
    </div>

    <%- include('../partials/footer') %>

    <!-- Add this script at the bottom of the file -->
    <script>
    async function toggleFollow(username, button) {
        const isFollowing = button.getAttribute('data-following') === 'true';
        try {
            const response = await fetch(`/users/${username}/follow`, {
                method: isFollowing ? 'DELETE' : 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            });
            
            const data = await response.json();
            
            if (data.success) {
                button.setAttribute('data-following', !isFollowing);
                button.textContent = isFollowing ? 'Follow' : 'Unfollow';
                button.className = `btn btn-${isFollowing ? '' : 'outline-'}primary btn-sm follow-btn`;
            } else {
                alert(data.error || 'Error updating follow status');
            }
        } catch (error) {
            console.error('Error:', error);
            alert('Error updating follow status');
        }
    }
    </script>
</body>
</html> 