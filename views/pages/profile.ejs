<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Finder - Profile</title>
    <%- include('../partials/bootstrap') %>
</head>
<body>
    <%- include('../partials/header') %>

    <div class="container py-5">
        <!-- User Profile Section -->
        <div class="row mb-5">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body text-center">
                        <% if (user.profileImage) { %>
                            <img src="<%= user.profileImage %>" alt="Profile" class="rounded-circle mb-3" style="width: 150px; height: 150px; object-fit: cover;">
                        <% } else { %>
                            <div class="bg-secondary rounded-circle mb-3 mx-auto d-flex align-items-center justify-content-center" style="width: 150px; height: 150px;">
                                <span class="text-white display-4"><%= user.username.charAt(0).toUpperCase() %></span>
                            </div>
                        <% } %>
                        <h3 class="card-title"><%= user.username %></h3>
                        <p class="text-muted"><%= user.email %></p>
                        <% if (user.bio) { %>
                            <p><%= user.bio %></p>
                        <% } %>
                        <a href="/profile/edit" class="btn btn-outline-primary">Edit Profile</a>
                    </div>
                </div>
            </div>

            <!-- Stats Section -->
            <div class="col-md-8">
                <div class="row g-4">
                    <div class="col-md-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">My Recipes</h5>
                                <p class="display-6"><%= user.recipes ? user.recipes.length : 0 %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Saved Recipes</h5>
                                <p class="display-6"><%= user.savedRecipes ? user.savedRecipes.length : 0 %></p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <h5 class="card-title">Followers</h5>
                                <p class="display-6"><%= user.followers ? user.followers.length : 0 %></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="row">
            <!-- My Recent Recipes -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">My Recent Recipes</h5>
                        <a href="/recipes/my-recipes" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <% if (user.recipes && user.recipes.length > 0) { %>
                            <div class="list-group">
                                <% user.recipes.slice(0, 5).forEach(recipe => { %>
                                    <a href="/recipes/<%= recipe.id %>" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1"><%= recipe.title %></h6>
                                            <small class="text-muted"><%= new Date(recipe.createdAt).toLocaleDateString() %></small>
                                        </div>
                                    </a>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <p class="text-muted text-center">No recipes created yet</p>
                        <% } %>
                    </div>
                </div>
            </div>

            <!-- Recently Saved Recipes -->
            <div class="col-md-6 mb-4">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Recently Saved Recipes</h5>
                        <a href="/recipes/saved" class="btn btn-sm btn-outline-primary">View All</a>
                    </div>
                    <div class="card-body">
                        <% if (user.savedRecipes && user.savedRecipes.length > 0) { %>
                            <div class="list-group">
                                <% user.savedRecipes.slice(0, 5).forEach(recipe => { %>
                                    <a href="/recipes/<%= recipe.id %>" class="list-group-item list-group-item-action">
                                        <div class="d-flex w-100 justify-content-between">
                                            <h6 class="mb-1"><%= recipe.title %></h6>
                                            <small class="text-muted">by <%= recipe.author.username %></small>
                                        </div>
                                    </a>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <p class="text-muted text-center">No saved recipes yet</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../partials/footer') %>
</body>
</html> 