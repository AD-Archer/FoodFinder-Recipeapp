<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PlatePedia - Edit Profile</title>
    <%- include('../../partials/meta') %>

    <%- include('../../partials/bootstrap') %>
</head>
<body>
    <%- include('../../partials/header') %>

    <div class="container py-5">
        <%- include('../../partials/alerts') %>
        
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body p-4">
                        <h1 class="text-center mb-4">Edit Profile</h1>
                        
                        <form action="/profile/edit" method="POST" class="needs-validation" id="profileForm" novalidate>
                            <!-- Profile Image -->
                            <div class="mb-4 text-center">
                                <% if (user.profileImage) { %>
                                    <img src="<%= user.profileImage %>" alt="Profile" 
                                         class="rounded-circle mb-3" 
                                         style="width: 150px; height: 150px; object-fit: cover;"
                                         onerror="this.onerror=null; this.src='/images/default-profile.png';">
                                <% } else { %>
                                    <div class="bg-secondary rounded-circle mb-3 mx-auto d-flex align-items-center justify-content-center" 
                                         style="width: 150px; height: 150px;">
                                        <span class="text-white display-4">
                                            <%= user.username.charAt(0).toUpperCase() %>
                                        </span>
                                    </div>
                                <% } %>
                                
                                <div class="mb-3">
                                    <label for="profileImage" class="form-label">Profile Image URL</label>
                                    <div class="input-group">
                                        <input 
                                            type="url" 
                                            class="form-control" 
                                            id="profileImage" 
                                            name="profileImage" 
                                            value="<%= user.profileImage ? user.profileImage : '' %>"
                                            placeholder="https://example.com/your-image.jpg"
                                        >
                                        <% if (user.profileImage) { %>
                                            <button 
                                                type="button" 
                                                class="btn btn-outline-danger" 
                                                onclick="clearProfileImage()"
                                                title="Remove image"
                                            >
                                                <i class="bi bi-x"></i>
                                            </button>
                                        <% } %>
                                    </div>
                                    <div class="form-text">Enter a valid image URL starting with http:// or https://</div>
                                    <div id="profileImageFeedback" class="invalid-feedback"></div>
                                </div>
                            </div>

                            <!-- Username -->
                            <div class="mb-3">
                                <label for="username" class="form-label">Username*</label>
                                <input type="text" 
                                       class="form-control" 
                                       id="username" 
                                       name="username" 
                                       value="<%= user.username %>" 
                                       required
                                       pattern="[a-zA-Z0-9_]+"
                                       minlength="3"
                                       maxlength="30">
                                <div class="invalid-feedback">
                                    Username must be between 3 and 30 characters and can only contain letters, numbers, and underscores.
                                </div>
                            </div>

                            <!-- Email -->
                            <div class="mb-3">
                                <label for="email" class="form-label">Email*</label>
                                <input type="email" 
                                       class="form-control" 
                                       id="email" 
                                       name="email" 
                                       value="<%= user.email %>" 
                                       required>
                                <div class="invalid-feedback">
                                    Please enter a valid email address.
                                </div>
                            </div>

                            <!-- Bio -->
                            <div class="mb-3">
                                <label for="bio" class="form-label">Bio</label>
                                <textarea class="form-control" 
                                          id="bio" 
                                          name="bio" 
                                          rows="3" 
                                          maxlength="500"><%= user.bio || '' %></textarea>
                                <div class="form-text">
                                    Maximum 500 characters
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">Save Changes</button>
                                <a href="/profile" class="btn btn-outline-secondary">Cancel</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../partials/footer') %>

    <script>
        // Form validation
        (function () {
            'use strict'
            const forms = document.querySelectorAll('.needs-validation')
            Array.from(forms).forEach(form => {
                form.addEventListener('submit', event => {
                    if (!form.checkValidity()) {
                        event.preventDefault()
                        event.stopPropagation()
                    }
                    form.classList.add('was-validated')
                }, false)
            })
        })()

        function clearProfileImage() {
            document.getElementById('profileImage').value = '';
        }

        function validateProfileImage(input) {
            const url = input.value.trim();
            if (url && !url.match(/^https?:\/\/.+/i)) {
                return false;
            }
            return true;
        }

        // Form submission handler
        document.getElementById('profileForm').addEventListener('submit', function(e) {
            const profileImage = document.getElementById('profileImage');
            if (profileImage.value.trim() && !validateProfileImage(profileImage)) {
                e.preventDefault();
                profileImage.classList.add('is-invalid');
                document.getElementById('profileImageFeedback').textContent = 
                    'Please enter a valid URL starting with http:// or https://';
                return false;
            }
        });
    </script>
</body>
</html> 