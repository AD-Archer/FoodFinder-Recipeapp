<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Finder - My Recipes</title>
    <%- include('../../partials/meta') %>

    <%- include('../../partials/bootstrap') %>
    <style>
        /* Mobile optimizations */
        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }

            .header-row {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .header-row .col-md-4 {
                text-align: center;
            }

            .card {
                margin-bottom: 1rem;
            }

            .card-body {
                padding: 1rem;
            }

            .btn-group {
                width: 100%;
                margin-top: 1rem;
            }

            .btn-group .btn {
                flex: 1;
                padding: 0.375rem;
                font-size: 0.875rem;
            }

            .badge {
                font-size: 0.75rem;
            }

            .card-footer {
                padding: 0.75rem 1rem;
            }
        }
    </style>
</head>
<body>
    <%- include('../../partials/header') %>
    
    <div class="container py-5">
        <%- include('../../partials/alerts') %>

        <div class="row mb-4 header-row">
            <div class="col-md-8">
                <h1>My Recipes</h1>
            </div>
            <div class="col-md-4 text-end">
                <a href="/recipes/create" class="btn btn-primary">Create New Recipe</a>
            </div>
        </div>

        <div class="row g-3">
            <% if (recipes && recipes.length > 0) { %>
                <% recipes.forEach(recipe => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <a href="/recipes/<%= recipe.id %>" class="text-decoration-none text-dark">
                            <div class="card h-100 shadow-sm">
                                <% if (recipe.imageUrl) { %>
                                    <img src="<%= recipe.imageUrl %>" class="card-img-top" alt="<%= recipe.title %>">
                                <% } %>
                                <div class="card-body">
                                    <h5 class="card-title"><%= recipe.title %></h5>
                                    <p class="card-text"><%= recipe.description %></p>
                                    <p class="text-muted"><%= recipe.calories %> calories</p>
                                </div>
                            </div>
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center py-5">
                    <p class="lead text-muted">You haven't created any recipes yet</p>
                    <a href="/recipes/create" class="btn btn-primary">Create Your First Recipe</a>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../../partials/footer') %>
    <script src="/js/recipe.js"></script>
</body>
</html> 