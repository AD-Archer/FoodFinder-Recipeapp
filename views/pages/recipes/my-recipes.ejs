<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Finder - My Recipes</title>
    <%- include('../../partials/bootstrap') %>
    <style>
        /* Mobile optimizations */
        @media (max-width: 768px) {
            .container {
                padding: 1rem;
            }

            .header-row {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .header-row .col-md-4 {
                text-align: center;
            }

            .card {
                margin-bottom: 1rem;
            }

            .card-body {
                padding: 1rem;
            }

            .btn-group {
                width: 100%;
                margin-top: 1rem;
            }

            .btn-group .btn {
                flex: 1;
                padding: 0.375rem;
                font-size: 0.875rem;
            }

            .badge {
                font-size: 0.75rem;
            }

            .card-footer {
                padding: 0.75rem 1rem;
            }
        }
    </style>
</head>
<body>
    <%- include('../../partials/header') %>
    
    <div class="container py-5">
        <%- include('../../partials/alerts') %>

        <div class="row mb-4 header-row">
            <div class="col-md-8">
                <h1>My Recipes</h1>
            </div>
            <div class="col-md-4 text-end">
                <a href="/recipes/create" class="btn btn-primary">Create New Recipe</a>
            </div>
        </div>

        <div class="row g-3">
            <% if (recipes && recipes.length > 0) { %>
                <% recipes.forEach(recipe => { %>
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card h-100 shadow-sm">
                            <% if (recipe.imageUrl) { %>
                                <img src="<%= recipe.imageUrl %>" class="card-img-top" alt="<%= recipe.title %>" style="height: 200px; object-fit: cover;">
                            <% } else { %>
                                <div class="bg-light text-center py-5">
                                    <i class="bi bi-camera fs-1 text-muted"></i>
                                </div>
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= recipe.title %></h5>
                                
                                <% if (recipe.categories && recipe.categories.length > 0) { %>
                                    <div class="mb-2">
                                        <% recipe.categories.forEach(category => { %>
                                            <span class="badge bg-secondary me-1"><%= category.name %></span>
                                        <% }) %>
                                    </div>
                                <% } %>

                                <div class="d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center mt-3 gap-2">
                                    <div>
                                        <% if (recipe.difficulty) { %>
                                            <span class="badge bg-info me-2"><%= recipe.difficulty %></span>
                                        <% } %>
                                        <span class="badge bg-success"><%= recipe.calories %> calories</span>
                                    </div>
                                    <div class="btn-group w-100 w-md-auto">
                                        <a href="/recipes/<%= recipe.id %>" class="btn btn-outline-primary btn-sm">View</a>
                                        <a href="/recipes/<%= recipe.id %>/edit" class="btn btn-outline-secondary btn-sm">Edit</a>
                                        <button onclick="deleteRecipe(<%= recipe.id %>)" class="btn btn-outline-danger btn-sm">Delete</button>
                                    </div>
                                </div>
                            </div>
                            <div class="card-footer text-muted">
                                <small>Created <%= new Date(recipe.createdAt).toLocaleDateString() %></small>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center py-5">
                    <p class="lead text-muted">You haven't created any recipes yet</p>
                    <a href="/recipes/create" class="btn btn-primary">Create Your First Recipe</a>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../../partials/footer') %>
    <script src="/js/recipe.js"></script>
</body>
</html> 