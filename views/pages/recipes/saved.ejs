<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Food Finder - Saved Recipes</title>
    <%- include('../../partials/bootstrap') %>
</head>
<body>
    <%- include('../../partials/header') %>
    
    <div class="container py-5">
        <h1 class="mb-4">Saved Recipes</h1>

        <% if (error) { %>
            <div class="alert alert-danger">
                <%= error %>
            </div>
        <% } %>

        <% if (success) { %>
            <div class="alert alert-success">
                <%= success %>
            </div>
        <% } %>

        <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
            <% if (recipes && recipes.length > 0) { %>
                <% recipes.forEach(recipe => { %>
                    <div class="col">
                        <div class="card h-100 shadow-sm">
                            <% if (recipe.imageUrl) { %>
                                <img src="<%= recipe.imageUrl %>" class="card-img-top" alt="<%= recipe.title %>" style="height: 200px; object-fit: cover;">
                            <% } %>
                            <div class="card-body">
                                <h5 class="card-title"><%= recipe.title %></h5>
                                <p class="card-text text-muted">By <%= recipe.author.username %></p>
                                
                                <% if (recipe.categories && recipe.categories.length > 0) { %>
                                    <div class="mb-2">
                                        <% recipe.categories.forEach(category => { %>
                                            <span class="badge bg-secondary me-1 mb-1"><%= category.name %></span>
                                        <% }) %>
                                    </div>
                                <% } %>

                                <div class="d-flex justify-content-between align-items-center mt-2">
                                    <div>
                                        <span class="badge bg-info"><%= recipe.calories %> calories</span>
                                        <% if (recipe.difficulty) { %>
                                            <span class="badge bg-<%= recipe.difficulty === 'easy' ? 'success' : (recipe.difficulty === 'medium' ? 'warning' : 'danger') %>">
                                                <%= recipe.difficulty %>
                                            </span>
                                        <% } %>
                                    </div>
                                    <div class="btn-group">
                                        <a href="/recipes/<%= recipe.id %>" class="btn btn-outline-primary btn-sm">View Recipe</a>
                                        <button 
                                            class="btn btn-primary btn-sm save-recipe" 
                                            onclick="toggleSave('<%= recipe.id %>', this)"
                                            data-saved="true">
                                            Unsave
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12">
                    <div class="text-center py-5">
                        <h3>No saved recipes yet</h3>
                        <p class="text-muted">Start saving recipes you like!</p>
                        <a href="/recipes/browse" class="btn btn-primary mt-3">Browse Recipes</a>
                    </div>
                </div>
            <% } %>
        </div>
    </div>

    <%- include('../../partials/footer') %>

    <script>
        async function toggleSave(recipeId, button) {
            try {
                const response = await fetch(`/recipes/${recipeId}/save`, {
                    method: 'DELETE',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                });
                
                const data = await response.json();
                
                if (data.success) {
                    // Remove the recipe card from the page
                    button.closest('.col').remove();
                    
                    // Check if there are any recipes left
                    const recipesContainer = document.querySelector('.row');
                    if (!recipesContainer.querySelector('.col')) {
                        location.reload(); // Reload to show the "No saved recipes" message
                    }
                } else {
                    alert(data.error || 'Error updating save status');
                }
            } catch (error) {
                console.error('Error:', error);
                alert('Error updating save status');
            }
        }
    </script>
</body>
</html> 